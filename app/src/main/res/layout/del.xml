<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialodfon"
    android:background="@drawable/d2"
    android:layout_gravity="top"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:padding="10dp"
     android:layout_gravity="center">
     <TextView
         android:id="@+id/textv"
         android:layout_width="370dp"
         android:layout_height="142dp"
         android:layout_gravity="center"
         android:gravity="center|top"
         android:padding="20dp"
         android:textStyle="bold"
         android:layout_marginTop="30dp"
         android:text="Удаление предмета"
         android:textColor="@color/textcolor"
         android:textSize="30dp" />

     <TextView
         android:id="@+id/textv1"
         android:layout_width="370dp"
         android:layout_height="259dp"
         android:layout_gravity="center"
         android:gravity="top"
         android:padding="20dp"
         android:paddingStart="40dp"
         android:paddingLeft="30dp"
         android:paddingEnd="20dp"
         android:paddingRight="20dp"
         android:text="Вы действительно хотите удалить данный предмет? \nПосле удаления вы не сможете вы не сможете его востановить! \nПродолжить?"
         android:textColor="@color/textcolor"
         android:textSize="26dp" />

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="center"
          android:padding="10dp">
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/bdel"
             android:layout_weight="1"
             app:backgroundTint="#FFA7A7"
             android:textColor="@color/textcolor"
             android:text="Удалить"
             android:textSize="10dp"
             android:padding="20dp"/>


         <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/bSet"
             android:layout_weight="1"
             app:backgroundTint="#B5FFB3"
             android:textColor="@color/textcolor"
              android:text="Отмена"
              android:textSize="10dp"
              android:padding="20dp"/>
      </LinearLayout>


 </LinearLayout>

</LinearLayout>